<h1 class="px-4">教師清單</h1>
<div class="container-fluid">
  <div class="row">
    <!--教師清單-->
    <div class="col-8 d-flex justify-content-around flex-wrap">
      <div class="container">
        <div class="row g-3">
          <!--搜尋-->
          <div class="input-group mb-3">
            <form action="/teachers/search" method="get">
              <div class="input-group mb-3">
                <input
                  type="text"
                  name="keyword"
                  class="form-control"
                  placeholder="請輸入教師名稱"
                  aria-label="keyword"
                  aria-describedby="search-button"
                  value="{{keyword}}"
                />
                <div class="input-group-append">
                  <button
                    class="btn btn-outline-danger"
                    type="submit"
                    id="search-button"
                  >搜尋</button>
                </div>
              </div>
            </form>
          </div>

          {{#each filterDatas}}
            <div class="col-4" style="height: 550px">
              <div class="p-3 border bg-light h-100 d-inline-block">
                <img
                  class="card-img-top"
                  src="{{this.User.profile}}"
                  alt="{{this.User.name}}"
                />
                <div class="card-body m-0" style="height: 500px">
                  <h3 class="card-title h-15">{{this.User.name}}</h3>
                  <h6 class="h-15">{{this.User.nation}}</h6>
                  <p class="card-text h-30">{{this.User.intro}}</p>
                  <div class="h-30">
                    <a
                    href="/teachers/reserve/{{this.id}}"
                    class="btn btn-outline-danger"
                  >開課資訊</a>
                  </div>                  
                </div>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </div>

    <!--排行榜-->
    <div class="col-4 p-3">
      <ul class="list-group">
        <h3>學習時數總排行</h3>
        {{#each topTen}}
          <li class="list-group-item">
            <div class="row justify-content-start align-items-center">
              <div class="row col-2 align-items-center m-0 p-0" style="width:50px;height:50px;">
                <img
                  class="card-img-top img-fluid"
                  src="{{this.profile}}"
                  alt="image"
                />
              </div>
              <div class="col-2">
                NO.{{this.index}}
              </div>
              <div class="col-4 w-auto">
                {{this.name}}
              </div>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
    
    <!--分頁器-->
    <div class="mt-3 d-flex justify-content-center align-items-end">
      <nav class="mt-3" aria-label="page navigation">
      <ul class="pagination">
        <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
          <a class="page-link" href="searchTeachers?page={{pagination.prev}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#each pagination.pages}}
          {{#ifCond this ../pagination.currentPage}}
            <li class="page-item active"><a class="page-link" href="/searchTeachers?page={{pagination.prev}}">{{this}}</a></li>
          {{else}}
            <li class="page-item">
              <a class="page-link" href="/searchTeachers?page={{this}}">{{this}}</a>
            </li>
          {{/ifCond}}
        {{/each}}
        <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
          <a class="page-link" href="/searchTeachers?page={{pagination.next}}" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
      </nav>
    </div>
  </div>
</div>