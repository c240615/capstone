<div class="mb-4 text-center">
  <h1 class="h3 font-weight-normal mb-3">Sign In</h1>
</div>
<form class="form-signin mx-5 my-4" action="/signin" method="POST">
  <div class="form-row ">
    <label class="form-label" for="email">Email</label>
    <input
      class="form-control"
      id="email"
      type="text"
      name="email"
      class="form-control"
      placeholder="Email"
      required
      autofocus
    />
  </div>
  <div class="form-row mb-3">
    <label class="form-label" for="password">Password</label>
    <input
      class="form-control"
      id="password"
      type="password"
      name="password"
      class="form-control"
      placeholder="Password"
      required
    />
  </div>
  <div class="d-flex justify-content-center m-4">
    <button class="btn btn-dark btn-block" type="submit">進行登入</button>
  </div>
</form>
<div class="mb-4 text-center m-2">
  <p>
    <a class="text-decoration-none" href="/auth/google">
    <i
        class="fa-brands fa-google"
        style="color: #3c3b3b;"
      >&#09;</i>
      google 登入
    </a>
  </p>
  <!--<p><a class="text-decoration-none" href="/auth/facebook"><i class="fa-brands fa-facebook">登入</i> </a></p>-->
</div>